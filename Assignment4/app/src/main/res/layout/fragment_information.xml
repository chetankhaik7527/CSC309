<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dp"
    tools:context="edu.eku.mrawlings.assignment4.InformationFragment">

    <TextView
        android:id="@+id/tv_ConversionTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/mile_to_kilometer"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_Input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_below="@+id/tv_ConversionTitle"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/et_Input"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_Value"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_Calculate"
        android:layout_marginTop="33dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp" />
</RelativeLayout>
