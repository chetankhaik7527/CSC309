<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.eku.mrawlings.assignment7.MainActivity">

    <Button
        android:id="@+id/btn_red"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/btn_green"
        android:layout_above="@id/btn_blue"
        android:background="#FF0000" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_above="@id/btn_yellow"
        android:background="#00FF00" />

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/btn_yellow"
        android:layout_above="@id/btn_pink"
        android:background="#0000FF" />

    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_above="@id/btn_clear"
        android:background="#FFFF00" />

    <Button
        android:id="@+id/btn_pink"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/btn_clear"
        android:background="#FF00FF" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Clear"
        android:background="#FFFFFF"/>

    <Button
        android:id="@+id/btn_image1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:text="Image 1" />

    <Button
        android:id="@+id/btn_image2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@id/btn_image1"
        android:layout_alignParentRight="true"
        android:text="Image 2" />

    <Button
        android:id="@+id/btn_image3"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@id/btn_image2"
        android:layout_alignParentRight="true"
        android:text="Image 3" />

    <RelativeLayout
        android:id="@+id/dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btn_image1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp">
    </RelativeLayout>
</RelativeLayout>
