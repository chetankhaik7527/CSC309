<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.eku.mrawlings.assignment2.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tv_judge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judge 1"
        tools:text="Judge 1"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_judge3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judge 3"
        tools:text="Judge 3"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="17dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/judge2_score"
        app:layout_constraintTop_toTopOf="@+id/judge2_score" />

    <TextView
        android:id="@+id/tv_judge4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judge 4"
        tools:text="Judge 4"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/judge3_score"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/judge3_score" />

    <TextView
        android:id="@+id/tv_judge5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judge 5"
        tools:text="Judge 5"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/judge4_score"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/judge4_score" />

    <TextView
        android:id="@+id/tv_judge6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judge 6"
        tools:text="Judge 6"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/judge5_score"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/judge5_score" />

    <TextView
        android:id="@+id/tv_judge7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judge 7"
        tools:text="Judge 7"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/judge6_score"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/judge6_score" />

    <Spinner
        android:id="@+id/judge7_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:entries="@array/judge_scores"
        app:layout_constraintRight_toLeftOf="@+id/tv_totalscore"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/judge6_score"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="18dp" />

    <Spinner
        android:id="@+id/judge6_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/judge_scores"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/judge7_score"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/judge5_score"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/judge7_score" />

    <Spinner
        android:id="@+id/judge5_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/judge_scores"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/judge6_score"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/judge4_score"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/judge6_score" />

    <Spinner
        android:id="@+id/judge4_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/judge_scores"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/judge5_score"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/judge3_score"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/judge5_score" />

    <TextView
        android:id="@+id/tv_judge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judge 2"
        tools:text="Judge 2"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="41dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/judge1_score"
        app:layout_constraintTop_toTopOf="@+id/judge1_score" />

    <EditText
        android:id="@+id/judge1_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="0-10"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/tv_judge1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_judge1" />

    <SeekBar
        android:id="@+id/judge2_score"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:max="11"
        android:progress="0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_judge2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <Spinner
        android:id="@+id/judge3_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/judge_scores"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/judge4_score"
        app:layout_constraintTop_toBottomOf="@+id/tv_judge3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/judge4_score" />

    <TextView
        android:id="@+id/tv_totalscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Score"
        android:textSize="30sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/total_score"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="44sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btn_calculate"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate!"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
